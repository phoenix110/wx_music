image {
    display: block;
    width: 100%;
}

/* 导航 */
.nav {
    display: flex;
    width: 100%;
    height: 44px;
    line-height: 44px;
    text-align: center;
    background: #fff;
}

.nav-name {
    width: 100%;
    height: 100%;
}

.nav-current {
    box-sizing: border-box;
    border-bottom: 2px solid #31c27c;
    color: #31c27c;
}

/* 推荐 */
.block {
    width: 100%;
}

.swiper {
    width: 100%;
}

.content {
    box-sizing: border-box;
    width: 100%;
    padding: 0 10px;
}

.title {
    height: 44px;
    line-height: 44px;
}

.ul {
    overflow: hidden;
}

.con {
    position: relative;
    float: left;
    width: 46vw;
    font-size: 12px;
}

.con-image {
    width: 100%;
    height: 46vw;
}

.introduce {
    padding: 8px;
}

.icon-play {
    position: absolute;
    bottom: 38px;
    right: 4px;
    width: 24px;
    height: 24px;
}

/* 排行榜 */
.ranking-lists {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 10px;
    background: #f2f2f2;
}

.ranking-list {
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 100px;
    margin: 0 0 10px 0;
    background: #fff;
}

.ranking-list image {
    width: 100px;
    height: 100%;
}

.list-introduce {
    position: relative;
    width: 235px;
    padding: 4px;
}

.lists-title {
    font-size: 16px;
    margin: 0 0 8px 0;
}

.lists-info {
    width: 220px;
    font-size: 14px;
    color: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

.songname {
    display: inline-block;
    margin: 0 5px;
    color: #333;
}

.icon-more {
    position: absolute;
    top: 0;
    right: 10px;
    bottom: 0;
    height: 19px;
    margin: auto;
    color: rgba(0, 0, 0, 0.5);
    font-size: 14px;
    font-family: "宋体";
    font-weight: 800;
}

/* 搜索 */

.search-box {
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 56px;
    padding: 10px;
    background: #f2f2f2;
}

.icon-search {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 20px;
    margin: auto;
    width: 18px;
    height: 18px;
}

.search-input {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 0 12px 0 35px;
    font-size: 14px;
    color: rgba(0, 0, 0, 0.3);
    background: #fff;
}

.hot-search {
    box-sizing: border-box;
    width: 100%;
    padding: 15px 15px 10px 15px;
    font-size: 14px;
    color: #000;
}

.hot-search-title {
    margin: 0 0 10px 0;
}

.hot-search-box {
    width: 100%;
    height: 126px;
    overflow: hidden;
}

.hot-search-value {
    float: left;
    box-sizing: border-box;
    height: 32px;
    line-height: 32px;
    padding: 0 10px;
    border: 1px solid rgba(0, 0, 0, 0.6);
    border-radius: 99px;
    margin: 0 14px 10px 0;
}

.special-key {
    border-color: #fc4524;
    color: #fc4524;
}

/* 搜索列表 */
.search-lists {
    width: 100%;
}

.search-lists-ul {
    width: 100%;
    border-top: 1px solid #e5e5e5;
}

.search-lists-ul-li {
    display: flex;
    width: 100%;
    height: 55px;
    border-bottom: 1px solid #e5e5e5;
    color: #000;
    font-size: 16px;
}

.icon-music-box {
    position: relative;
    width: 56px;
}

.icon-music {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width: 22px;
    height: 20px;
}

.music-songname {
    padding: 10px 0 2px;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    width:300px;
    box-sizing:border-box;

}

.music-singer {
    color: #808080;
    font-size: 12px;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    width:300px;
    box-sizing:border-box;
}