/* pages/listDetail/listDetail.wxss */

.body {
    position: relative;
    width: 100%;
}

.top-blur {
    width: 100%;
    height: 226px;
    filter: blur(15px);
}

.top {
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 17px 16px 0;
}

.top-top {
    width: 100%;
    height: 125px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.album-image {
    width: 125px;
    height: 125px;
}

.album-info {
    width: 208px;
    font-size: 14px;
    color: #fff;
}

.album-title {
    font-size: 18px;
}

.btn-play {
    margin:25px auto 0;
    width: 170px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    border-radius: 40px;
    background-color: #31c27c;
    color: #fff;
}

.status-play {
    display: flex;
    align-items: center;
    width: 100%;
    height: 78px;
}

.btn-pause {
    width: 46px;
    height: 46px;
}

.play-box {
    color: #fff;
    font-size: 14px;
    margin:0 0 0 20px;
}

.play-info {
    font-size: 12px;
}

.bottom {
    position: relative;
    background: #fff;
    font-size: 14px;
    color: #777;
}

.bottom-header {
    height: 50px;
    line-height: 50px;
}

.ul {
    width: 100%;
}

.li {
    display: flex;
    width: 100%;
    height: 62px;
}

.left {
    width: 45px;
    height: 100%;
    line-height: 62px;
    text-align: center;
}

.top-three {
    color: #FF400B;
}

.right {
    box-sizing: border-box;
    height: 100%;
    padding: 10px 16px;
}

.songname {
    color: #000;
    font-size: 16px;
}