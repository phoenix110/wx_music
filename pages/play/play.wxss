/* pages/play/play.wxss */

.bg-image {
    width: 100%;
    height: 100%;
    filter: blur(10px);
}

.body {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    font-size: 16px;
    color: #fff;
}

.top {
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 110px;
    padding: 15px 80px 15px 15px;
    background: rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.pic_album {
    float: left;
    width: 80px;
    height: 80px;
}

.music-info {
    float: left;
    margin: 20px 0 0 20px;
}

.singer {
    font-size: 12px;
}

.status-box {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 25px;
    margin: auto;
    width: 45px;
    height: 45px;
}

.status {
    width: 100%;
    height: 100%;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 154px;
    color: #808080;
}

.line-box {
    display: flex;
    align-items: center;
    width: 100%;
    height: 40px;
}

.time {
    width: 55px;
    height: 100%;
    line-height: 40px;
    text-align: center;
    font-size: 12px;
}

.line-bg {
    position: relative;
    width: 100%;
    height: 100%;
}

.line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100%;
    height: 2px;
    background: #808080;
}

.duration-line {
    width: 0;
    height: 100%;
    background: #31c27c;
}